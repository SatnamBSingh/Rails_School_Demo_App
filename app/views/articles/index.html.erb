<p id="notice"><%= notice %></p>


<center>
<div style= "background: lightgrey;">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show', article, class: "show_button" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "edit_button" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
</center>
<style media="screen", type="text/css">
  .show_button{
  color: white;
  background: forestgreen;
  padding: 5px 15px;
  }
</style>
<style media="screen", type="text/css">
  .delete_button{
  color: white;
  background: red;
  padding: 5px 15px;
</style>
