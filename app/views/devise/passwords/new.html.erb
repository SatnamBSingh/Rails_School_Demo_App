<h2>Forgot your password?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "padding: 7px 80px;" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'instruction_button' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

<style type="text/css">
  .instruction_button{
      color: black;
      background: lightskyblue;
      border: groove;
      padding: 5px 50px;
  }
</style>
